@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css'>
    <link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet'>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js'></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .login-form {
            width: 340px;
            margin: 50px auto;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body style="background-image:url('/Content/images/home.jpg');">
    @using (Html.BeginForm("DoRegister", "Login", FormMethod.Post))
    {
        <div class="container-fluid" style="width:40%;background-color:whitesmoke;">
            <div class="login-form">
                <div class="card-header">
                    
                </div>
                <h2 class="text-center">Sign Up</h2>
                <hr />
                <div class="form-group">
                    @Html.TextBox("unm", null, new { @class = "form-control input-sm chat-input", placeholder = "Username", @style = "width:400px;", @required = true })
                </div>
                <div class="form-group">
                    @Html.Password("pass", null, new { @class = "form-control input-sm chat-input", placeholder = "Password", @style = "width:400px;", @required = true })
                </div>
                <div>
                    @Html.Password("repass", null, new { @class = "form-control input-sm chat-input", placeholder = "Re-Enter Password", @style = "width:400px;", @required = true })
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" style="width:200px">Sign Up</button>
                </div>

                @Html.ActionLink("Already have an Account", "Index", "Login")
            </div>
        </div>
    }
</body>
</html>
