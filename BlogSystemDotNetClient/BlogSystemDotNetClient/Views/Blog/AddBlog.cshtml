<!DOCTYPE html>
<html>
<head>
    <meta http-equiv='Content-Type' content='text/html; charset=UTF-8'>
    <title>Add Blog </title>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css'>
    <link href='https://fonts.googleapis.com/icon?family=Material Icons' rel='stylesheet'>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js'></script>
    <script>
        $(document).ready(function () {
            $('textarea#textarea2').characterCounter();
        });
    </script>
</head>
<body class='grey lighten-1'>
     <nav>
         <div class='nav-wrapper'>

             <a href='#' class='brand-logo center'>BlogHub</a>
             <ul id='nav-mobile' class='left hide-on-med-and-down'>


                 <li>

                     <a class='navbar-brand' href='/Home/Index'>

                         <i class='material-icons' style='font-size:50px;'>home</i>

                     </a>

                 </li>

             </ul>
             <ul id='nav-mobile' class='right hide-on-med-and-down'>


                 <li>

                     <a class='navbar-brand' href='/Login/Logout' style="font-size:30px;">

                         Logout

                     </a>

                 </li>

             </ul>

         </div> 
          
    </nav> 

           <div class='row container'>
         
           <div class='col s12 m12 l12'>
             
               <div class='card blue-grey darken-1'>
                 
                   <div class='card-content white-text'>
                     
                       <div class='row center'>
                           @using (Html.BeginForm("Blog", "Blog", FormMethod.Post))
                           {
                               
                                   <div class='row' style='font-size:30px;'>

                                       Add New Blog

                                   </div>
                                   <div class='row'>

                                       <div class='input-field col s12'>
                                           Title &nbsp;&nbsp; : &nbsp;&nbsp; @Html.TextBox("title", null, new { @class = " validate", placeholder = "Title of Blog", @style = "width:400px;", @required = true })

                                       </div>

                                   </div>

                                   <div class='row'>

                                       <div class='input-field col s12'>
                                           Content &nbsp;&nbsp; : &nbsp;&nbsp; @Html.TextArea("content", null, new { @class = " validate",  placeholder = "Description of Blog", @style = "width:400px;" })
                                           
                                       </div>

                                   </div>

                                   <div class='row'>

                                       <div class='input-field col s12'>
                                           Blog By  &nbsp;&nbsp; : &nbsp;&nbsp; @Html.TextBox("blogby", null, new { @class = " validate", placeholder = "Author of Blog", @style = "width:400px;", @required = true })
                                           
                                       </div>

                                   </div>
                                   

                                   <button class='btn waves-effect waves-light' type='submit' name='action'>
                                       Submit
                                       <i class='material-icons right'>send</i>

                                   </button>

                                   <button class='btn waves-effect waves-light red' type='reset' name='action'>
                                       Reset
                                       <i class='material-icons right'>clear</i>

                                   </button>


                               }
                               &nbsp;
                               <div class='center'>

                                   <a href='/Home/Index' class='waves-effect waves-light btn blue'>HOME</a>

                               </div>

                           </div>  
                       
                </div>  
                   
            </div>  
        </div>
    </div>
</body>
</html>

